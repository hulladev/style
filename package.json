  "homepage": "https://hulla.dev/projects/style",
  "repository": {
    "type": "git",
    "url": "https://github.com/hulladev/style.git",
    "directory": "packages/style"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "@eslint/js": "^9.5.0",
    "@types/eslint__js": "^8.42.3",
    "bunchee": "^5.2.1",
    "commitizen": "^4.3.0",
