    "dev": "turbo dev",
    "prepare": "husky"
  },
  "author": {
    "name": "Samuel Hulla",
    "email": "hulla@hulla.dev",
    "url": "https://hulla.dev"
  },
  "maintainers": [
    "Samuel Hulla <hulla@hulla.dev>"
