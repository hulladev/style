---
import { variant, variantGroup } from '@/lib/style.ts'
import type { VariantProps } from '@hulla/style'

const sizeVariant = variant({
  name: 'size',
  classes: {
    sm: 'size-sm',
    md: 'size-md',
    lg: 'size-lg'
  },
  default: 'md'
})

const colorVariant = variant({
  name: 'color',
  classes: {
    primary: 'color-primary',
    secondary: 'color-secondary'
  },
  default: 'primary'
})

const buttonGroup = variantGroup(sizeVariant, colorVariant)

type Props = VariantProps<typeof buttonGroup>
const props = Astro.props
---

<button class={buttonGroup.css(props)}><slot /></button>

<style>
  button {
    border: 2px solid;
    cursor: pointer;
  }
  button:hover {
    opacity: 0.8;
  }
  .size-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
  }
  .size-md {
    padding: 0.5rem 1rem;
    font-size: 1rem;
  }
  .size-lg {
    padding: 0.75rem 1.5rem;
    font-size: 1.125rem;
  }
  .color-primary {
    color: greenyellow;
    border-color: greenyellow;
  }
  .color-secondary {
    color: aquamarine;
    border-color: aquamarine;
  }
</style>

